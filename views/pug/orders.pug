extends ../layouts/main.pug 
block style 
  link(type='text/css' rel='stylesheet' href='/css/orders.css')
block content 
  if orders.length < 1
    section(id='no-orders-wrap' class='text-center')
      h4(class='font-weight-bold') No orders
      a(href='/products' class='btn btn-primary px-4') Go to Products
  else 
    section(id='orders-wrap' class='p-4')
      div(class='order-details-wrap')
        h3(class='font-weight-bold mb-4') Your Orders
        each order in orders 
          div(class="card")
            div(class="card-header") Order ID: #{order.id}
              p(class='mb-0') Placed: #{order.createdAt.toString().split(' ').filter((text, index) => index < 4).join(' ')}
            div(class="card-body")
              each product in order.products
                div(class='item-wrap mb-4')
                  img(alt=`${product.title}` src=`${product.front_image}`)
              
