extends ../layouts/main.pug 
block style 
  link(type='text/css' rel='stylesheet' href='/css/products.css')
block content 
  if products.length > 0
    section(id='products-wrap' class='p-4')
      h4(class='font-weight-bold py-3 text-center') Products
      div(id='products-grid')
        each product in products
          a(class='product p-3 text-dark' href=`/products/product-details/${product._id}`)
            img(class='product-image' src=`${product.frontImg}`)
            p(class='text-center font-weight-bold py-2') #{product.title}
            p(class='text-center py-2') #{product.description}
            p(class='product-price text-center') $#{product.price}
  else
    section(id='no-products-wrap' class='text-center')
      h4(class='font-weight-bold mb-3') No products
      a(href='/add' class='btn btn-primary px-4') Add Product


    
